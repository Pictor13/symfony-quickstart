{% extends 'AppBundle::layout.html.twig' %}

{% block title %}{{ 'admin.permissions_manage.title' | trans({'%name%': permission.name}) }}{% endblock %}

{% block body %}

    {% import 'AdminBundle:Users:macros.html.twig' as usersMacros %}
    {% import 'AdminBundle:Groups:macros.html.twig' as groupsMacros %}

    <h2>{{ 'admin.permissions_manage.users'|trans }}</h2>
    <div class="row">
        <div class="col-md-6">
            {{ usersMacros.displayUsers('permissions', permission.id, permission.name, usersIn, 'in') }}
        </div>
        <div class="col-md-6">
            {{ usersMacros.displayUsers('permissions', permission.id, permission.name, usersOut, 'out') }}
        </div>
    </div>

    <hr/>

    <h2>{{ 'admin.permissions_manage.groups'|trans }}</h2>
    <div class="row">
        <div class="col-md-6">
            {{ groupsMacros.displayGroups('permissions', permission.id, permission.name, groupsIn, 'in') }}
        </div>
        <div class="col-md-6">
            {{ groupsMacros.displayGroups('permissions', permission.id, permission.name, groupsOut, 'out') }}
        </div>
    </div>

    <div class="text-center">
        <a class="btn btn-primary" href="{{ path('admin_permissions') }}">{{ 'base.button.back' | trans }}</a>
    </div>

{% endblock %}
